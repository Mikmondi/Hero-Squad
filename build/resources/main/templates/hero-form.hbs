{{#partial "content"}}

    {{#if editHero}}
        <div class="center">
            <h4>Edit Hero</h4>
            <form action="/heroes/{{hero.id}}/update" method="post">
                <div class="txt_field">
                    <label for="name">Hero Name</label>
                    <input id="name" name="name" type="text" value="{{hero.name}}">
                </div>
                <div class="txt_field">
                    <label for="age">Hero Age</label>
                    <input id="age" name="age" type="number" value="{{hero.age}}">
                </div>
                <div class="txt_field">
                    <label for="power">Hero Power</label>
                    <input id="power" name="power" type="text" value="{{hero.power}}">
                </div>
                <div class="txt_field">
                    <label for="weakness">Hero Weakness</label>
                    <input id="weakness" name="weakness" type="text" value="{{hero.weakness}}">
                </div>
                <div class="txt_field">
                    <label for="squadId">Hero Squad</label>
                    <select id="squadId" name="squadId">
                        {{#each squads}}
                            <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="txt_field">
                    <hr>
                    <p><strong>Don't see the right squad? </strong><a href="/squads/new">Add a squad here.</a></p>
                </div>
                <button type="submit" class="btn btn-default">Edit hero</button>
                <span></span>
            </form>
        </div>

    {{else}}
        <div class="center">
            <h4>Add Hero</h4>
            <form action="/heroes/new" method="post">
                {{#if squads}}
                    <div class="txt_field">
                        <label for="name">Name</label>
                        <input id="name" name="name" type="text" placeholder="Enter hero's name">
                    </div>
                    <div class="txt_field">
                        <label for="age">Age</label>
                        <input id="age" name="age" type="number" placeholder="Enter hero's age">
                    </div>
                    <div class="txt_field">
                        <label for="power">Power</label>
                        <input id="power" name="power" type="text" placeholder="Enter hero's power">
                    </div>
                    <div class="txt_field">
                        <label for="weakness">Weakness</label>
                        <input id="weakness" name="weakness" type="text" placeholder="Enter hero's weakness">
                    </div>
                    <div class="txt_field">
                        <label for="squadId">Squad</label>
                        <select id="squadId" name="squadId">
                            {{#each squads}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="txt_field">
                        <p><strong>Don't see the right squad? </strong><a href="/squads/new">Add a squad</a></p>
                    </div>
                    <button type="submit" class="btn btn-default">Add Hero</button>
                    <hr>

                {{else}}
                    <div class="txt_field">
                        <p><strong>Need a squad? </strong><a href="/squads/new" style="text-decoration : none;">Add a one here</a> </p>
                    </div>

                {{/if}}
            </form>
        </div>
    {{/if}}
{{/partial}}

{{> layout.hbs}}